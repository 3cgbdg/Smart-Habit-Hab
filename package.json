{
  "name": "smart-habit-lab",
  "version": "1.0.0",
  "packageManager": "npm@11.6.2",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "turbo format",
    "clean": "turbo clean",
    "prepare": "husky"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.1",
    "turbo": "^2.0.0"
  },
  "lint-staged": {
    "apps/backend/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/frontend/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/shared/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,js,ts,tsx}": [
      "prettier --write"
    ]
  }
}
